@model IEnumerable<PrikupljanjePodataka.DTO.SelectDTO>

@{
    ViewBag.Title = "Visina";
}

<h2>Masa veslaca</h2>

<form class="form-horizontal" method="post">
    <div class="form-group">
        <label>Id veslača:</label>
        <input list="veslaciDatalist" class="form-control" name="IdVeslac" />
        <datalist id="veslaciDatalist">
            @foreach (var veslac in Model)
            {
                <option value="@veslac.Id" selected>@veslac.Value</option>
            }
        </datalist>
    </div>

    <div class="form-group">
        <label>Datum mjerenja:</label>
        <input type="date" class="form-control" name="VrijemeMjerenje" value="2018-06-01" required>
    </div>

    <div class="form-group">
        <label>Visina:</label>
        <input type="number" class="form-control" name="Masa" min="30" step="0.5" required>
    </div>
    <button type="submit" class="btn btn-default">Spremi</button>
</form>