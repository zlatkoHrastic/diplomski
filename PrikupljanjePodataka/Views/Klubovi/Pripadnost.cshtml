@model PrikupljanjePodataka.DTO.PripadnostKlubuViewModel
@{
    ViewBag.Title = "Pripadnost Klubu";
}

<h2>Pripadnost Klubu</h2>

<form class="form-horizontal" method="post">
    <div class="form-group">
        <label>Id veslača:</label>
        <input list="veslaciDatalist" class="form-control" name="IdVeslac" />
        <datalist  id="veslaciDatalist">
            @foreach (var veslac in Model.Veslaci)
            {
                <option value="@veslac.Id" selected>@veslac.Value</option>
            }
        </datalist>
    </div>
    <div class="form-group">
        <label>Klub:</label>
        <select class="form-control" name="IdKlub">
            @foreach (var klub in Model.Klubovi)
            {
                <option value="@klub.Id" selected>@klub.Value</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label>Datum pocetak:</label>
        <input type="date" class="form-control" name="DatumPocetak" value="2018-06-01" required>
    </div>
    <div class="form-group">
        <label>Datum Kraj:</label>
        <input type="date" class="form-control" name="DatumKraj">
    </div>
    <button type="submit" class="btn btn-default">Spremi</button>
</form>

